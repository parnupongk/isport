@model isport_foxhun.Models.TeamViewModel
@{
    ViewBag.Title = "Register";
}


<script type="text/javascript">
        $(document).ready(function () {

            $("#btnSubmit").click(function () {
                console.log('submit');
                $("#frmMain").submit();
            });

            $("#team_region").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Player/Province",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term },
                        success: function (data) {
                            console.log(data);
                            response($.map(data, function (item) {
                                return { label: item.pvnName, value: item.pvnName };
                            }))

                        }
                    })
                },
                messages: {
                    noResults: '',
                    results: function (resultsCount) { }
                }
            });

            Dropzone.autoDiscover = false;
            $("#dropzone-case").dropzone({
                url: "@Url.Action("uploadFiles", "Home")",
                sending: function(file, xhr, formData) {
                    formData.append("teamName", $('#team_name').val());
                },
                success: function (file, response) {
                    //window.location.reload();
                    //listFiles();
                },
                error: function (file, response) {
                    file.previewElement.classList.add("dz-error");
                }
                
            });
        });

            function listFiles() {
                var url = '@Url.Action("EDTModelList", "Home")';
                $.post(url, function (data) {
                    if (data !== '') {
                        $("#listFiles").html(data);
                    } else {
                        $("#listFiles").hide();
                    }
                });
            }

</script>

<p class="text-success">@ViewBag.StatusMessage</p>

<h2>Register</h2>


