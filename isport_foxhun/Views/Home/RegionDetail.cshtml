
@model isport_foxhun.Models.RegionViewModelList

<div class="row">
    <div class="col-lg-12" style="padding: 0 30px 10px 30px;">
        <div class="table-responsive">
            <table id="datatable1" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>Name</th>
                        <th>Detail</th>
                        <th>DateTime</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.regionList)
                    {
                        <tr class="gradeX">
                            <td>@item.seq</td>
                            <td><a href="@Url.Action("Team","Home",new {region_id = @item.id })" class="text-medium" target="_blank"> @item.name</a></td>
                            <td>@item.detail</td>
                            <td> @item.datetime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!--end .table-responsive -->
    </div>
    <!--end .col -->
</div>
