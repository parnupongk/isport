@model isport_foxhun.Models.MatchViewListModels
@{
    Layout = null;
    int index = 1;
}

<h2>Program</h2>
<div class="row">
    <div class="col-lg-12" style="padding: 0 30px 10px 30px;">
        <div class="table-responsive">
            <table id="datatable1" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>Match</th>
                        <th>Date</th>
                        <th>Field</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.list)
                    {
                        <tr class="gradeX">
                            <td>@index</td>
                            <td><a href="@Url.Action("index","scout",new {match_id = @item.id })" class="text-medium" target="_blank"> @item.team1 vs @item.team2</a></td>
                            <td>@item.matchdate</td>
                            <td> @item.field</td>
                        </tr>
                        index++;
                    }

                </tbody>
            </table>
        </div>
        <!--end .table-responsive -->
    </div>
    <!--end .col -->
</div>

