@model isport_foxhun.Models.PlayerViewModelList


<div class="row">
    @foreach (var list in Model.playerList)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <div class="caption" style="min-height:320px;">
                    <div class="row">
                        <div class="col-md-8">
                            <p>No. @list.seq</p>
                            <p>Position : @list.position</p>
                            
                        </div>
                        <div class="col-md-4">
                            @{ if (list.image != null)
                                {
                                    <img src="@Url.Content(list.image)" class="img-thumbnail" style="max-height:150px;min-height:150px;" />
                                }
                                else
                                {
                                    <img src="~/images/isport.png" class="img-thumbnail" style="max-height:150px;min-height:150px;" />
                                }
                            }
                        </div>
                    </div>
                    <div class="row" style="margin:10px;">
                        <p>@list.name</p>
                        <p>Age :@list.age wigth :@list.wight hight :@list.hight</p>
                        <p class="small">Team : @list.team</p>
                        <!--

                        <div class="progress">
                            {
                                var i = list.tacking * 10;
                                var itxt = i.ToString() + '%';

                                <div class="progress-bar" role="progressbar" aria-valuenow=list.tacking aria-valuemin="0" aria-valuemax="10" style="width: itxt">
                                    Tacking : list.tacking.ToString()
                                </div>
                            }
                        </div>
                            -->

                    </div>
                    <h6>Detail :</h6>
                    <p class="small">
                        @list.detail
                    </p>
                    <p><a class="btn btn-primary" id="btnPlayerDetail" onclick="GetCompare('@list.id');" >Keep detail&raquo;</a></p> <!-- href="~/player/index?id=list.id" -->

                </div>
            </div>

        </div>
                                }
</div>